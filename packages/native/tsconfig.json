{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // all below from https://divinehycenth.com/blog/yarn-workspace-monorepo
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}